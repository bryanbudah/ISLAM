{
  "version": 2,
  "builds": [
    {
      "src": "config/asgi.py",  
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
        "runtime": "python3.9"  
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "handler": "whitenoise.storage.CompressedManifestStaticFilesStorage"  
    },
    {
      "src": "/(.*)",
      "dest": "config/asgi.py"  
    }
  ]
}